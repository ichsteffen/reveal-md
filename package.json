{
  "name": "@patarapolw/reveal-md-cli",
  "version": "0.1.0",
  "description": "Reveal.js x Markdown (Showdown.js) editor and CLI.",
  "main": "index.js",
  "bin": {
    "reveal-md": "bin/cli.js"
  },
  "scripts": {
    "start": "node ./bin/cli.js .",
    "help": "node ./bin/cli.js --help",
    "build": "cd web && npm run build",
    "deploy": "cd web && npm run gh:deploy",
    "preinstall": "git submodule update --init --recursive && cd ./web && npm i && npm run build",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/patarapolw/reveal-md.git"
  },
  "keywords": [
    "reveal.js",
    "showdown.js"
  ],
  "author": "Pacharapol Withayasakpunt <patarapolw@gmail.com> (https://polvcode.dev)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/patarapolw/reveal-md/issues"
  },
  "homepage": "https://github.com/patarapolw/reveal-md#readme",
  "dependencies": {
    "cors": "^2.8.5",
    "dree": "^2.1.11",
    "express": "^4.17.1",
    "fast-glob": "^3.1.0",
    "open": "^7.0.0",
    "yargs": "^15.0.2"
  }
}
